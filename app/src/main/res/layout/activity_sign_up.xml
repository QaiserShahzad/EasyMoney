<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical"
    android:weightSum="7"
    android:gravity="center">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="30dp"
        android:text="Create an Account"
        android:layout_weight="0.5"
        android:textAlignment="center"/>


    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.2"
        android:orientation="vertical"
        android:gravity="center">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/et_Name"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/userr"
        android:hint="Name"
        android:textAlignment="center"
        android:background="@drawable/edit_singup"
        />


    <View
        android:layout_width="wrap_content"
        android:layout_height="7dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/input_Email"
        android:inputType="textEmailAddress"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/emaill"
        android:hint="Email"
        android:textAlignment="center"
        android:background="@drawable/edit_singup"
        />



    <View
        android:layout_width="wrap_content"
        android:layout_height="7dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="phone"
        android:id="@+id/tv_cnum"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/phone"
        android:hint="Phone"
        android:textAlignment="center"
        android:background="@drawable/edit_singup"
        />


    <View
        android:layout_width="wrap_content"
        android:layout_height="7dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/tv_password"
        android:paddingLeft="10dp"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/lock_black"
        android:hint="Password"
        android:textAlignment="center"
        android:background="@drawable/edit_singup"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="SignUp"
        android:background="@drawable/signupbutton"
        android:id="@+id/btnSignup_Next"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"/>

    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>
    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="0.6"-->
        <!--android:layout_marginLeft="40dp"-->
        <!--android:layout_marginRight="40dp"-->
        <!--android:textColor="#333"-->
        <!--android:text="You'll receive a SMS to varify your \n Identity,but we'll never spam."-->
        <!--android:textSize="16dp"/>-->

</LinearLayout>
