<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:weightSum="4"
    android:orientation="vertical"
    tools:context="com.easycoinbudget.Activities.MainActivity_resetpassword">



            <TextView
                android:id="@+id/tvEstimatedEntryTitle"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="0.8"
                android:text="Reset your password"
                android:textSize="18sp"
                android:textStyle="bold" />
    <!--<View-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="20dp"/>-->



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
        android:layout_weight="1.5"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:id="@+id/input_NewPassword"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/lock_black"
                android:hint="Password"
                android:textAlignment="center"
                android:background="@drawable/edit_singup" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:id="@+id/input_ConfirmPassword"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/lock_black"
                android:hint="Confirm Password"
                android:textAlignment="center"
                android:background="@drawable/edit_singup" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnreset_cancel"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_shape_login_signup"
                android:text="CANCEL" />
            <View
                android:layout_width="20dp"
                android:layout_height="0dp"/>


            <Button
                android:id="@+id/btn_UpdatePassword"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/signupbutton"
                android:text="UPDATE" />


        </LinearLayout>

    </LinearLayout>
