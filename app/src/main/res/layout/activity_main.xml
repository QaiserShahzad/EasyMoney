<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:weightSum="3"
    android:orientation="vertical"
    android:background="@color/green">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="350dp"
            android:layout_height="140dp"
            app:srcCompat="@drawable/app_logo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="190dp"
            android:layout_height="32dp"
            android:textColor="@color/colorWhite"
            android:text="We hope you enjoy your stay" />

    </LinearLayout>
  <View
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:layout_weight="0.5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnSplash_Signup"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/button_shape_login_signup"
            android:text="Sign Up" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="194dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="Already have Account" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>
        <Button
            android:id="@+id/btnSplash_Login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/button_shape_login_signup"
            android:text="Log In" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="By using Budget, you agree to budgets's  Term of use and Privacy Policy." />


    </LinearLayout>






</LinearLayout>



























