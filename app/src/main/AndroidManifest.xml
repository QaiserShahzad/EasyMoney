<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.easycoinbudget">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.easycoinbudget.Activities.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />

        <!-- <activity android:name=".Activities.view"> -->


        <!-- </activity> -->
        <!-- <activity android:name=".Activities.LoginActivity"> -->
        <!-- </activity> -->

        <activity android:name="com.easycoinbudget.Activities.MainActivity_Signup" />
        <activity android:name="com.easycoinbudget.Activities.MainActivity_Login" />
        <activity
            android:name="com.easycoinbudget.Activities.MainActivity_Splash"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- <activity android:name=".Signup" /> -->
        <activity android:name="com.easycoinbudget.Activities.MainActivity_resetpassword"></activity>
        <activity android:name="com.easycoinbudget.Activities.MainActivity_MatchPassword" />
        <activity android:name="com.easycoinbudget.Activities.MainActivity_SendPassword"></activity>
        <!--<activity android:name=".ForgotPassword.ForgotPass"></activity>-->
